<?xml version="1.8" ?>
<sdf version="1.10">
  <model name="tractor_simple">
    <pose>0 0 0.15 0 0 0</pose>

    <!-- Chassis -->
    <link name="base_link">
      <pose>0 0 0.15 0 0 0</pose>
      <inertial>
        <mass>80</mass>
        <inertia>
          <ixx>4.9</ixx><iyy>10.0</iyy><izz>12.8</izz>
        </inertia>
      </inertial>
      <collision name="base_collision">
    <geometry>
      <box><size>1.2 0.8 0.3</size></box>
        </geometry>
      </collision>
      <visual name="base_visual">
        <geometry>
          <box><size>1.2 0.8 0.3</size></box>
        </geometry>
        <material><ambient>0.1 0.6 0.1 1</ambient></material>
      </visual>
    </link>

    <!-- Left wheel -->
    <link name="left_wheel">
      <pose>0.0 0.35 0.10 0 0 0</pose>
      <inertial><mass>5</mass></inertial>
      <collision name="left_wheel_collision">
        <pose>0 0 0 -1.5708 0 0</pose>
        <geometry><cylinder><radius>0.18</radius><length>0.08</length></cylinder></geometry>
      </collision>
      <visual name="left_wheel_visual">
        <pose>0 0 0 -1.5708 0 0</pose>
        <geometry><cylinder><radius>0.18</radius><length>0.08</length></cylinder></geometry>
        <material><ambient>0.1 0.1 0.1 1</ambient></material>
      </visual>
    </link>

    <!-- Right wheel -->
    <link name="right_wheel">
      <pose>0.0 -0.35 0.10 0 0 0</pose>
      <inertial><mass>5</mass></inertial>
      <collision name="right_wheel_collision">
        <pose>0 0 0 -1.5708 0 0</pose>
        <geometry><cylinder><radius>0.18</radius><length>0.08</length></cylinder></geometry>
      </collision>
      <visual name="right_wheel_visual">
        <pose>0 0 0 -1.5708 0 0</pose>
        <geometry><cylinder><radius>0.18</radius><length>0.08</length></cylinder></geometry>
        <material><ambient>0.1 0.1 0.1 1</ambient></material>
      </visual>
    </link>

    <!-- Rear caster (simple) -->
    <link name="rear_caster">
      <pose>-0.5 0 0.05 0 0 0</pose>
      <inertial><mass>1</mass></inertial>
      <collision name="caster_collision">
        <geometry><sphere><radius>0.05</radius></sphere></geometry>
      </collision>
      <visual name="caster_visual">
        <geometry><sphere><radius>0.05</radius></sphere></geometry>
      </visual>
    </link>

    <!-- Joints -->
    <joint name="left_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>left_wheel</child>
      <pose>0 0 0 0 1.5708 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit><lower>-1e16</lower><upper>1e16</upper></limit>
      </axis>
    </joint>

    <joint name="right_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>right_wheel</child>
      <pose>0 0 0 0 1.5708 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit><lower>-1e16</lower><upper>1e16</upper></limit>
      </axis>
    </joint>

    <joint name="rear_caster_joint" type="ball">
      <parent>base_link</parent>
      <child>rear_caster</child>
    </joint>

    <!-- Diff drive plugin (Gazebo Sim system) -->
    <plugin name="gz::sim::systems::DiffDrive" filename="gz-sim-diff-drive-system">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.70</wheel_separation>
      <wheel_radius>0.18</wheel_radius>
      <odom_publish_frequency>30</odom_publish_frequency>
      <topic>/vehicle_cmd_vel</topic> <!-- Global topic -->
      <odom_frame>odom</odom_frame>
      <robot_base_frame>base_link</robot_base_frame>
      <min_velocity>-2.0</min_velocity>
      <max_velocity> 2.0</max_velocity>
      <min_acceleration>-3.0</min_acceleration>
      <max_acceleration> 3.0</max_acceleration>
    </plugin>

    <!-- LIDAR (GPU-based; needed in Harmonic) -->
    <link name="lidar_link">
      <pose>0.7 0 0.7 0 0 0</pose>
      <inertial><mass>0.1</mass></inertial>
      <collision name="lidar_col">
        <geometry><sphere><radius>0.02</radius></sphere></geometry>
      </collision>
      <visual name="lidar_vis">
        <geometry><cylinder><radius>0.03</radius><length>0.04</length></cylinder></geometry>
      </visual>
      <sensor name="front_lidar" type="gpu_lidar">
        <always_on>true</always_on>
        <visualize>true</visualize>
        <update_rate>10</update_rate>
        <topic>/sim/lidar</topic>
        <pose>0 0 0 0 0 0</pose>
        <lidar>
          <scan>
            <horizontal>
              <samples>720</samples>
              <min_angle>-1.5708</min_angle>
              <max_angle> 1.5708</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.05</min>
            <max>20.0</max>
          </range>
        </lidar>
      </sensor>
    </link>
    <joint name="lidar_joint" type="fixed">
      <parent>base_link</parent>
      <child>lidar_link</child>
    </joint>

    <!-- RGB + Depth camera on a mast -->
    <link name="camera_link">
      <pose>0.5 0 0.9 0 0 0</pose>
      <inertial><mass>0.1</mass></inertial>
      <collision name="cam_col">
        <geometry><box><size>0.02 0.02 0.02</size></box></geometry>
      </collision>
      <sensor name="front_rgb" type="camera">
        <topic>/sim/cam/rgb</topic>
        <camera>
          <horizontal_fov>1.047</horizontal_fov>
          <image><width>640</width><height>480</height><format>R8G8B8</format></image>
          <clip><near>0.05</near><far>50</far></clip>
        </camera>
        <update_rate>30</update_rate>
        <always_on>true</always_on>
      </sensor>

      <sensor name="front_depth" type="depth_camera">
        <topic>/sim/cam/depth</topic>
        <camera>
          <horizontal_fov>1.047</horizontal_fov>
          <image><width>640</width><height>480</height><format>L8</format></image>
          <clip><near>0.05</near><far>50</far></clip>
        </camera>
        <update_rate>30</update_rate>
        <always_on>true</always_on>
      </sensor>
    </link>
    <joint name="camera_joint" type="fixed">
      <parent>base_link</parent>
      <child>camera_link</child>
    </joint>


  </model>
</sdf>